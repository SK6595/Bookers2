<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= render 'list', book: @book, user: @user %>

<h2>Books</h2>

<table class="table">
  <tr>
    <th>

    </th>
    <th>
      Title
    </th>
    <th>
      Opinion
    </th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td>
      <%= link_to user_path(@user) do %>
      <%= image_tag book.user.get_profile_image %>
      <% end %>
    </td>
    <td>
      <%= link_to book_path(book.id) do %>
        <%= book.title %>
      <% end %>
    </td>
    <td>
      <%= book.body %>
    </td>
  </tr>
  <% end %>
</table>