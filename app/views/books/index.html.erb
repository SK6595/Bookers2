<h2>User Info</h2>
<%= image_tag @user.get_profile_image %>
<%= @user.name %>
<%= @user.introduction %>
<%=link_to "edit",edit_user_path(@user) %>

<h2>New Book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
<table>
  <tr>
    <th>
      
    </th>
    <th>
      Title
    </th>
    <th>
      Opinion
    </th>
  </tr>
  <tr>
    <td>
      <%= image_tag .get_profile_image %>
    </td>
  </tr>
</table>